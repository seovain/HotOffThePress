<!DOCTYPE html>
<html lang="en">

<head>
    <title>AimForge</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="banner">
        <div class="navbar">
            <div class="logo">
                <video class="logo" autoplay loop muted>
                    <source src="/videos/aimlog.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href ="/booking/create ">New Booking</a></li>
                <li><a href="/reportform">Report</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/help">Help</a></li>
            </ul>
        </div>
        <div class="content">
            <form id="form" action="/booking/updateComplete" method="post">
                <div class="form-container">
                    <h2>Update your booking with AimForge!</h2>
                    
                    <!-- Hidden ID Field -->
                    <input type="hidden" id="_id" name="id" value="<%= bookinglist._id %>">

                    <!-- Name Input -->
                    <label for="name">Enter your full name:</label>
                    <input type="text" id="name" name="name" placeholder="Name" value="<%= bookinglist.name %>" required>
                    <br>

                    <!-- Session Date Input -->
                    <label for="sessionDate">Session Date:</label>
                    <input type="date" id="sessionDate" name="sessionDate" value="<%= bookinglist.sessionDate.toISOString().slice(0, 10) %>" required>
                    <br>

                    <!-- Session Time Input -->
                    <label for="sessionTime">Session Time:</label>
                    <input type="time" id="sessionTime" name="sessionTime" value="<%= bookinglist.sessionTime %>" required>
                    <br>

                    <!-- Card Number Input -->
                    <label for="cardNumber">Card Number:</label>
                    <input type="text" id="cardNumber" name="cardNumber" placeholder="XXXX-XXXX-XXXX-XXXX" value="<%= bookinglist.cardNumber %>" required>
                    <br>

                    <!-- Expiry Date Input -->
                    <label for="expiryDate">Expiry Date:</label>
                    <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YY" value="<%= bookinglist.expiryDate %>" required>
                    <br>

                    <!-- Security Code Input -->
                    <label for="securityCode">Security Code:</label>
                    <input type="text" id="securityCode" name="securityCode" placeholder="CVV" value="<%= bookinglist.securityCode %>" required>
                    <br>

                    <!-- Submit Button -->
                    <button id="button" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById('form');

        form.onsubmit = (e) => {
            e.preventDefault();

            // Collect form data
            const name = document.getElementById('name').value.trim();
            const sessionDate = document.getElementById('sessionDate').value.trim();
            const sessionTime = document.getElementById('sessionTime').value.trim();
            const cardNumber = document.getElementById('cardNumber').value.trim();
            const expiryDate = document.getElementById('expiryDate').value.trim();
            const securityCode = document.getElementById('securityCode').value.trim();

            // Validation logic
            if (name.length === 0) {
                alert("Full name is required.");
                return;
            }

            if (!sessionDate) {
                alert("Session date is required.");
                return;
            }

            if (!sessionTime) {
                alert("Session time is required.");
                return;
            }

            if (!/^\d{4}-\d{4}-\d{4}-\d{4}$/.test(cardNumber)) {
                alert("Card Number must be in the format XXXX-XXXX-XXXX-XXXX.");
                return;
            }

            if (!/^(0[1-9]|1[0-2])\/\d{2}$/.test(expiryDate)) {
                alert("Expiry Date must be in the format MM/YY.");
                return;
            }

            if (!/^\d{3,4}$/.test(securityCode)) {
                alert("Security Code must be 3 or 4 digits.");
                return;
            }

            // If validations pass
            alert("Form submitted successfully!");
            form.submit();
        };
    </script>
</body>

</html>
