<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= title %> | HotOffThePress</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="banner">
<div class="navbar">
            <div class="logo">
                <video class="logo" autoplay loop muted>
                    <source src="/videos/aimlog.mp4" type="video/mp4">
                </video>
            </div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/submissions/create">Submit Story</a></li>
                <li><a href="/submissions">All Submissions</a></li>
                 <li class="nav-dropdown">
                   <a href="/users/account" class="dropbtn">My Account â–¾</a>
                   <ul class="dropdown-menu">
                     <li><a href="/users/account">Account</a></li>
                     <li><a href="/submissions/mine"> My Submissions</a></li>
                     <li><a href="/users/logout">Logout</a></li>
                   </ul>
                 </li>
                <li><a href="/aisupport">AI Support</a></li>
                <li><a href="/faq">FAQ</a></li>
                <li><a href="/about">About Us</a></li>
            </ul>
        </div>

    <div class="AllSubs">
      <h2>All Submissions</h2>
      <table border="1">
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>URL</th>
          <th>Content</th>
          <th>Created At</th>
        </tr>
        <% if (submissions && submissions.length > 0) { %>
          <% submissions.forEach(function(submission) { %>
            <tr>
              <td><%= submission.title %></td>
              <td><%= submission.author ? submission.author.username : 'Unknown' %></td>
              <td>
                <% if (submission.url) { %>
                  <a href="<%= submission.url %>"><%= submission.url %></a>
                <% } else { %>
                  N/A
                <% } %>
              </td>
              <td><%= submission.content %></td>
              <td><%= submission.createdAt ? submission.createdAt.toDateString() : '' %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr><td colspan="6">No submissions yet.</td></tr>
        <% } %>
      </table>
    </div>
  </div>
</body>
</html>