<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hot Off The Press Report</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <!-- Navbar -->
    <div class="banner">
        <div class="navbar">
            <div class="logo">
                <video class="logo" autoplay loop muted>
                    <source src="/videos/aimlog.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/reportform">Report</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/help">Help</a></li>
            </ul>
        </div>
    </div>

    <!-- Report Content -->
    <div class="content">
        <h1>Submission Report for Author: <%= author %></h1>
        <p>From <%= startDate %> to <%= endDate %></p>
        <ul>
            <% if (submissions.length === 0) { %>
                <li>No submissions found in the selected date range.</li>
            <% } else { %>
                <% submissions.forEach(function(submission) { %>
                    <li>
                        <strong>Title:</strong> <%= submission.title %><br>
                        <strong>Date:</strong> <%= submission.createdAt.toDateString() %><br>
                        <strong>Upvotes:</strong> <%= submission.upvotes %><br>
                        <strong>Content:</strong> <%= submission.content %>
                    </li>
                <% }); %>
            <% } %>
        </ul>
        <a href="/reportform">Back to Report Form</a>
    </div>
</body>
</html>
